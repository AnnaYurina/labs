program third
implicit NONE

real*8:: s
integer :: k, i, number, a, d, n


write(*,*) 'any number'
read*, n

do k=1,n
 s=random_r(k)
 number = nint(s*10)
 !print*, 's number', s, number
 if (number<=0.and.number>=9) then 
 exit 
 end if
end do 

write(*,*) 'vvedite your number'
do d=1,3
read*, a
 if (a==number) then 
 print*, 'correct answer'
 exit
 else if (a<number) then 
  print*, 'try again, number is more'
   else 
   print*, 'try again, number is less'
 end if
end do
print*, 'real number is', number

end program
